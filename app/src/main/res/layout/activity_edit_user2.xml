<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditUser.EditUserActivity">

    <EditText
        android:id="@+id/updatedNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="99dp"
        android:autofillHints="@string/name"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor"
        tools:targetApi="o" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#09008577"
        android:text="@string/Update"
        app:layout_constraintEnd_toEndOf="@+id/updatedBirthTxt"
        app:layout_constraintStart_toStartOf="@+id/updatedBirthTxt"
        app:layout_constraintTop_toBottomOf="@+id/updatedBirthTxt" />

    <EditText
        android:id="@+id/updatedBirthTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/birthDateHint"
        app:layout_constraintEnd_toEndOf="@+id/updatedNameTxt"
        app:layout_constraintStart_toStartOf="@+id/updatedNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/updatedNameTxt"
        tools:ignore="LabelFor" />
</androidx.constraintlayout.widget.ConstraintLayout>

